<%- include('../partials/header') %>

<form id="new-form" action="/anime" method="POST">
  <label>Title:</label>
  <input type="text" name="title" value="<%= anime.title %>">
  <label>Release Year:</label>
  <input type="text" name="releaseYear" value="<%= anime.releaseYear %>">
  <label>MPAA Rating</label>
  <select name="mpaaRating" value="'<%= anime.mpaaRating %>">
    <option value="G">G</option>
    <option value="PG">PG</option>
    <option value="PG-13">PG-13</option>
    <option value="R">R</option>
  </select>
  <label>Streaming On:</label>
  <input type="checkbox" name="nowShowing" value="<%= anime.location %>">
  <input type="submit" value="Update Anime">
</form>

<%- include('../partials/footer') %>